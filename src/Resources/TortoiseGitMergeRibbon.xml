          </Group>

          <Group CommandName="cmdGroupDiff" SizeDefinition="FourButtons">
            <ToggleButton CommandName="cmdViewInlineDiff" />
            <ToggleButton CommandName="cmdViewInlineDiffWord" />
            <SplitButtonGallery CommandName="cmdRegexFilterConfig1" Type="Items">
              <SplitButtonGallery.MenuLayout>
                <VerticalMenuLayout Gripper="None"/>
              </SplitButtonGallery.MenuLayout>
            </SplitButtonGallery>
            <ToggleButton CommandName="cmdViewIgnoreComments" />
          </Group>

          <Group CommandName="cmdGroupView" SizeDefinition="FiveButtons">
            <DropDownButton CommandName="cmdViewBars">
              <CheckBox CommandName="cmdViewLineDiffBar"/>
