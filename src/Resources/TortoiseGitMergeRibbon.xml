              </GroupSizeDefinition>
            </SizeDefinition>
            <Button CommandName="cmdSave" />
            <Button CommandName="cmdReload" />
            <Button CommandName="cmdUndo" />
            <Button CommandName="cmdRedo" />
            <ToggleButton CommandName="cmdEditEnabled" />
            <Button CommandName="cmdCopy" />
            <Button CommandName="cmdPaste" />
            <Button CommandName="cmdFind" />
            <Button CommandName="cmdGotoLine" />
            <Button CommandName="cmdMarkResolved" />
