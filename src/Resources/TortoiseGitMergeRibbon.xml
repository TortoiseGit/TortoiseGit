            </DropDownButton>
            <ToggleButton CommandName="cmdViewWrapLines" />
            <ToggleButton CommandName="cmdViewOneWayDiff" />
            <Button CommandName="cmdViewSwitchLeft" />
            <ToggleButton CommandName="cmdViewCollapsed" />
