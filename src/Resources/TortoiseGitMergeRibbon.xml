                </Row>
                <ColumnBreak ShowSeparator="true"/>
                <Row>
                  <ControlSizeDefinition ImageSize="Small" />
                </Row>
                <Row>
                  <ControlSizeDefinition ImageSize="Small" />
                </Row>
                <ColumnBreak ShowSeparator="true"/>
                <Row>
