                <Scale Group="cmdGroupNavigate" Size="Large" />
                <Scale Group="cmdGroupWhitespaces" Size="Medium" />
                <Scale Group="cmdGroupDiff" Size="Large" />
                <Scale Group="cmdGroupView" Size="Large" />
              </ScalingPolicy.IdealSizes>
              <!-- This describes the order and how the groups shrink when the window is resized. -->
              <Scale Group="cmdGroupNavigate" Size="Medium" />
              <Scale Group="cmdGroupView" Size="Small" />
              <Scale Group="cmdGroupDiff" Size="Small" />
              <Scale Group="cmdGroupEdit" Size="Medium" />
              <Scale Group="cmdGroupWhitespaces" Size="Small" />
            </ScalingPolicy>
          </Tab.ScalingPolicy>
